<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BetsForMatchActivity">


    <TextView
        android:id="@+id/txtTeams"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Teams"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="1dp" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Result"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/txtPlayer"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Player"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="14dp"
        android:layout_below="@+id/txtResult"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="1dp" />

    <TextView
        android:id="@+id/txtBet"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txtTeams"
        android:text="Bet"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="14dp" />

    <ListView
        android:id="@+id/currentUserBetView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/txtPlayer"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/betsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currentUserBetView"
        android:layout_centerHorizontal="true" />




</RelativeLayout>